{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@helpers/*": ["./src/helpers/*"],
			"@services/*": ["./src/services/*"],
			"@schemas/*": ["./src/schemas/*"]
		}
	}
}
